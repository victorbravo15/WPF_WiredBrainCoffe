<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush x:Key="BackgroundColor" Color="#2A272A" />
    <SolidColorBrush x:Key="TextBoxBackgroundColor" Color="#45434C" />
    <SolidColorBrush x:Key="ForegroundColor" Color="White" />
    <Style x:Key="CustomCheckBoxStyle" TargetType="{x:Type CheckBox}">
        <!-- Define el estilo personalizado aquí -->
        <Setter Property="Foreground" Value="White" />
    </Style>
</ResourceDictionary>
